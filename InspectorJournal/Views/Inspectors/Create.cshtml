@model InspectorJournal.DataLayer.Models.Inspector

@{
    ViewData["Title"] = "Создать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Создание нового инспектора</h4>
<hr class="my-4" />

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Полное имя</label>
                    <input asp-for="FullName" class="form-control" placeholder="Введите полное имя" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label">Отдел</label>
                    <input asp-for="Department" class="form-control" placeholder="Введите отдел" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-block">
                        <i class="bi bi-check-circle"></i> Создать
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle"></i> Вернуться к списку
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}