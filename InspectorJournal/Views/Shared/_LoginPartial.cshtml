@using Microsoft.AspNetCore.Identity;
@using InspectorJournal.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn btn-link">
                    @UserManager.GetUserName(User)
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a asp-area="" asp-controller="Users" asp-action="Index" title="Пользователи" class="btn btn-info">
                        Пользователи
                    </a>
                </li>
            }
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Сменить пароль" class="btn btn-warning">
                    Сменить пароль
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger navbar-btn navbar-link">Выход</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Вход</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Регистрация</a>
        </li>
    </ul>
}