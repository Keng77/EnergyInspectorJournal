<!DOCTYPE html>
<html lang="ru">
<head>
    <!-- Метаданные страницы -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Журнал Инспектора</title>

    <!-- Подключение Bootstrap CSS для Development -->
    <environment include="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"  />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        </environment>

    <!-- Подключение Bootstrap CSS и Bootstrap Icons для Production -->
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
              integrity="sha384-ENjdO4Dr2bkBIFxQpeoFk27Bzr1PbDgTz3GX0hI7r9BrrHlTgZ1AN0E3Qr7gyiwp"
              crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <!-- Навигационная панель -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-journal-text"></i> Журнал Инспектора
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Enterprises" asp-action="Index">
                            <i class="bi bi-building"></i> Предприятия
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Inspections" asp-action="Index">
                            <i class="bi bi-search"></i> Проверки
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Inspectors" asp-action="Index">
                            <i class="bi bi-person-badge"></i> Инспектора
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ViolationTypes" asp-action="Index">
                            <i class="bi bi-exclamation-triangle"></i> Типы Нарушений
                        </a>
                    </li>
                </ul>
                <!-- Частичная разметка для логина -->
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Основной контент страницы -->
    <div class="container mt-5 pt-4">
        @RenderBody()  <!-- Сюда будет вставлен основной контент страницы -->
        <hr />

        <!-- Подвал -->
        <footer class="text-center py-3">
            <p class="mb-0">&copy; 1337 - @DateTime.Now.Year. Журнал Инспектора. Все права защищены.</p>
        </footer>
    </div>

    <!-- Подключение скриптов для Development -->
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    <!-- Подключение скриптов для Production -->
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-QF9cqP7u1UOae3N14LD24HtYX6HTy92dqTzXRTmNrEZdxD1l0e9MEn9z9TOqNFWE"
                crossorigin="anonymous"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <!-- Дополнительные скрипты для секций -->
    @RenderSection("Scripts", required: false)
</body>
</html>
