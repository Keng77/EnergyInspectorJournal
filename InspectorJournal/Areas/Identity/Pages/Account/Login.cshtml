@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form method="post" novalidate>
                        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
                        <p class="text-secondary text-center">Пожалуйста, войдите, используя локальную учетную запись.</p>

                        <!-- Поле для имени пользователя или почты -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.UserNameOrEmail" class="form-label"></label>
                            <input asp-for="Input.UserNameOrEmail" class="form-control" />
                            <!-- Ошибки для имени пользователя или почты -->
                            <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                        </div>

                        <!-- Поле для пароля -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <!-- Ошибки для пароля -->
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Запомнить меня -->
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Кнопка входа -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Войти
                            </button>
                        </div>

                        <!-- Ссылки для восстановления пароля и регистрации -->
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-page="/ForgotPassword" class="btn btn-link">Забыли пароль?</a>
                            <span>Еще нет учетной записи?</span>
                            <a asp-page="/Account/Register" class="btn btn-link">Регистрация</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
